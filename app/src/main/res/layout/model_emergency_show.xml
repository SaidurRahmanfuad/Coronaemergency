<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gurds_show"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="#EEAB79">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/model_iv_guard_profile_show"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/doctor" />

                    <!-- <TextView
                         android:layout_marginTop="5dp"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="23"
                         android:textSize="12sp"
                         android:textStyle="bold"
                         android:textColor="#ffffff">
                     </TextView>-->

                    <!--<TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Oct"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:textStyle="bold">

                    </TextView>-->

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:text="IEDCR"
                        android:textColor="#0C0000"
                        android:textSize="18sp"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:gravity="center"
                        android:text="করোনা হট লাইন"
                        android:textColor="#D51010"
                        android:textSize="15sp"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:id="@+id/model_tv_emergency_call_show"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_22sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@drawable/shape_border_round_grn"
                        android:drawableLeft="@drawable/ic_phone"
                        android:gravity="center"
                        android:text="Call Now!"
                        android:textColor="#07830E"
                        android:textSize="10sp"
                        android:textStyle="bold">

                    </TextView>


                </LinearLayout>
            </LinearLayout>

           <LinearLayout
               android:layout_weight="2"
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <RelativeLayout
                   android:layout_weight="1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentTop="true"
                   android:layout_alignParentEnd="true">

                   <ImageView
                       android:layout_width="@dimen/_25sdp"
                       android:layout_height="@dimen/_25sdp"
                       android:layout_alignParentEnd="true"
                       android:layout_marginStart="10dp"
                       android:layout_marginTop="@dimen/_5sdp"
                       android:layout_marginEnd="10dp"
                       android:layout_marginBottom="10dp"
                       android:background="@drawable/ic_emerrgency_type_red"
                       android:gravity="center"
                       android:padding="@dimen/_7sdp">

                   </ImageView>
               </RelativeLayout>
               <RelativeLayout
                   android:layout_weight="4"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentEnd="true"
                   android:layout_alignParentBottom="true">

                   <TextView
                       android:id="@+id/model_tv_emergency_status_show"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_alignParentEnd="true"
                       android:layout_marginEnd="@dimen/_2sdp"
                       android:layout_marginBottom="@dimen/_2sdp"


                       android:text="করোনা হলে দেরি নয়"
                       android:textAlignment="center"
                       android:textColor="#07830E"
                       android:textSize="10sp"
                       android:textStyle="bold">

                   </TextView>
               </RelativeLayout>


           </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>