<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".live_update.MedicineActivity">

    <TextView
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Live"
        android:textAlignment="center"
        android:textColor="#EB0D0D"
        android:textSize="20sp">

    </TextView>



    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_margin="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:backgroundTint="#459627"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
    <TextView
        android:textColor="#ffff"
        android:textSize="18sp"
        android:gravity="center"
        android:textAlignment="center"
        android:text="বাংলাদেশ"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </TextView>
   </androidx.cardview.widget.CardView>
<LinearLayout
    android:layout_margin="@dimen/_20sdp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/live_bd_affectId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:text="000"
            android:textAlignment="center"
            android:textColor="#CCAD03"
            android:textSize="16sp"></TextView>
        <TextView
            android:textColor="#01083D"
            android:textSize="16sp"
            android:textAlignment="center"
            android:text="আক্রান্ত"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/live_bd_okId"
            android:textColor="#459627"
            android:textSize="16sp"
            android:textAlignment="center"
            android:text="000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:textColor="#01083D"
            android:textSize="16sp"
            android:textAlignment="center"
            android:text="সুস্থ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:gravity="end"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/live_bd_deathId"
            android:textColor="#D50000"
            android:textSize="16sp"
            android:textAlignment="center"
            android:text="000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:textColor="#01083D"
            android:textSize="16sp"
            android:textAlignment="center"
            android:text="মৃত্যু"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
</LinearLayout>



    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_40sdp"
        android:backgroundTint="#459627"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <TextView
            android:textColor="#ffff"
            android:textSize="18sp"
            android:gravity="center"
            android:textAlignment="center"
            android:text="বিশ্বে"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </TextView>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_margin="@dimen/_20sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/live_world_affectId"
                android:layout_marginLeft="@dimen/_8sdp"
                android:textColor="#CCAD03"
                android:textSize="16sp"
                android:textAlignment="center"
                android:text="000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:textColor="#01083D"
                android:textSize="16sp"
                android:textAlignment="center"
                android:text="আক্রান্ত"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/live_world_okId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="000"
                android:textAlignment="center"
                android:textColor="#459627"
                android:textSize="16sp"></TextView>
            <TextView
                android:textColor="#01083D"
                android:textSize="16sp"
                android:textAlignment="center"
                android:text="সুস্থ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:gravity="end"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/live_world_deathId"
                android:textColor="#D50000"
                android:textSize="16sp"
                android:textAlignment="center"
                android:text="000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:textColor="#01083D"
                android:textSize="16sp"
                android:textAlignment="center"
                android:text="মৃত্যু"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>